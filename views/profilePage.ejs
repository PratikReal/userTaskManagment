<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>LOGO</title>
    <link rel="shortcut icon" type="image/svg" href="/images/logo.svg" />
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container-fluid">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body" style="background-color: #ebebe9;">
                                <div class="d-flex flex-column align-items-center text-center mb-1">
                                    <img src="<%= user.profilePic %>" alt="Admin" class="rounded-circle" width="150px"
                                        height="140px">
                                    <h4>
                                        <%= user.username %>
                                    </h4>
                                    <p class="text-secondary mb-1">Full Stack Developer</p>
                                    <a href="/editProfile"><button class="btn btn-dark my-2 my-sm-0 pl-2 pr-2 mr-2"
                                            type="submit">Edit Profile</button></a>

                                </div>
                                <div class="card text-center">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <h6 class="mb-0">First Name</h6>
                                            </div>
                                            <div class="col-sm-8 text-secondary">
                                                <%= user.firstName ? user.firstName : ' ...... ' %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <h6 class="mb-0">Last Name</h6>
                                            </div>
                                            <div class="col-sm-8 text-secondary">
                                                <%= user.lastName ? user.lastName : ' ...... ' %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-8 text-secondary">
                                                <%= user.email ? user.email : "  ...... " %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <h6 class="mb-0">Number</h6>
                                            </div>
                                            <div class="col-sm-8 text-secondary">
                                                <%= user.number ? user.number : ' ...... ' %>=
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                                <ul class="navbar-nav mr-auto  mt-lg-0">
                                    <a href="/addPost"><button class="btn btn-dark my-2 my-sm-0 pl-2 pr-2 mr-2"
                                            type="submit">add Post</button></a>
                                    <a href="/myTaskSendByAdmin"><button
                                            class="btn btn-dark my-2 my-sm-0 pl-2 pr-2 mr-2" type="submit">My
                                            Tasks</button></a>
                                    <a href="/logout"><button class="btn btn-dark my-2 my-sm-0 pl-2 pr-2 mr-2"
                                            type="submit">Logout</button></a>
                                </ul>
                                <form class="form-inline">

                                    <input class="p-1 mr-2" type="date" id="myInput">
                                    <button class="btn btn-dark my-2 my-sm-0 pl-2 pr-2 mr-2"
                                        onclick="filterDate()">Serach</button>

                                </form>
                            </div>

                        </nav>
                        <div class="card-body">
                            <h1 class="navbar-brand " href="#">Your Posts</h1>


                            <div style="overflow-y: scroll; max-height: 400px;">
                                <ul id="myUL">
                                    <% for(var i=0; i<user.posts.length; i++){ %>
                                        <li style="list-style: none;">
                                            <div class="media p-2 m-3" style="background-color: #e7e7e7;">
                                                <div class="media-body">
                                                    <div class="row d-flex m-0">
                                                        <p class="ml-0" style="font-weight: bolder;">Start Time : <span
                                                                style="font-weight: lighter;">
                                                                <%= user.posts[i].startTime %>
                                                            </span></p>
                                                        <p class="ml-4" style=" font-weight: bolder;">End Time : <span
                                                                style="font-weight: lighter;">
                                                                <%= user.posts[i].endTime %>
                                                            </span></p>

                                                    </div>
                                                    <p class="" style=" font-weight: bolder;"> Date :
                                                    <h3 style="font-weight: lighter; font-size: 18px;">
                                                        <%= user.posts[i].date %>
                                                    </h3>
                                                    </p>
                                                    <p class=" mb-1 mt-0" style="font-weight: bold;"> Today's Task :
                                                        <span style="font-weight: lighter;">
                                                            <%= user.posts[i].todayTaskDiscription %>
                                                        </span></p>
                                                    <p class="mb-1" style="font-weight: bold;"> Tommorow's Task : <span
                                                            style="font-weight: lighter;">
                                                            <%= user.posts[i].tomorrowTaskDiscription %>
                                                        </span></p>
                                                </div>
                                            </div>
                                        <li style="list-style: none;">
                                            <% } %>
                                </ul>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script>

        function filterDate() {

            event.preventDefault();
            var input, filter, ul, li, a, i, txtValue;
            filter = document.getElementById("myInput").value;
            console.log(filter);
            ul = document.getElementById("myUL");

            li = ul.getElementsByTagName("li");
            for (i = 0; i < li.length; i++) {
                h3 = li[i].getElementsByTagName("h3")[0];
                date = h3.innerHTML;
                var now = new Date(date);
                var txtValue = now.getFullYear() + "-" + "0" + (now.getMonth() + 1) + "-" + now.getDate();
                console.log(txtValue)
                if (txtValue.indexOf(filter) > -1) {
                    li[i].style.display = "";
                    console.log("working2");
                } else {
                    li[i].style.display = "none";
                    console.log("post not found on this date");

                }
            }
        }

    </script>
</body>

</html>